<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.ahar.aharfoodorderclientapp.SplashActivity">


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="আহার ভুবনে আপনাকে স্বাগতম"
        android:textAlignment="center"
        android:textColor="#66BB6A"
        android:textSize="28dp"
        android:textStyle="bold|italic" />


    <ProgressBar
        android:id="@+id/progressBarId"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="11dp"
        android:paddingVertical="@dimen/cardview_default_radius"
        android:progressBackgroundTint="#66BB6A"
        android:progressTint="#B9F6CA" />


</RelativeLayout>
